<h1>Add Store</h1>
<form action="/add_store/" method="post">
  <label for="store_name">Store Name</label>
  <input id="store_name" name="store_name" type="text">

  <button type="submit" class="btn btn-success">Add Store</button>
</form>

  <% if @stores.any?() %>
  <p>Click on a store to see what brands they carry.</p>
  <ul>
    <% @stores.each() do |store| %>
    <li><a href="/store/<%= store.id() %>/"><%= store.store_name %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are currently no stores</p>
<% end %>
