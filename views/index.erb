<h1>Shoe Game</h1>

<ul>
  <li><a href="/add_brand/" class="btn btn-success">Add Brand</a></li><br>
  <li><a href="/add_store/" class="btn btn-success">Add Store</a></li>
</ul>

<h3>Available Brands</h3>
  <% if @brands.any? %>
    <ul>
      <% @brands.each do |brand| %>
        <li><a href="/brand/<%= brand.id %>/" class="btn btn-success"><%= brand.brand_name %></a></li><br>
      <% end %>
    </ul>
      <% else %>
        <p>There are currently no brands</p>
  <% end %>

<h3>Stores</h3>
  <% if @stores.any? %>
    <ul>
        <% @stores.each do |store| %>
          <li><a href="/store/<%= store.id %>/"><%= store.store_name %></li>
        <% end %>
    </ul>
      <% else %>
        <p>There are currently no brands</p>
  <% end %>
